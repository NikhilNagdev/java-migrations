{
  "table_name": "questions",
  "columns" : [
    {
      "id": {
        "datatype": "biginteger",
        "primary_key": true,
        "unsigned" : true,
        "length": 11
      }
    },
    {
      "title": {
        "datatype": "string"
      }
    },
    {
      "slug": {
        "datatype": "string",
        "unique": true
      }
    },

    {
      "body": {
        "datatype": "text"
      }
    },

    {
      "views_count": {
        "datatype": "bigInteger",
        "default_value": 0,
        "unsigned": true
      }
    },

    {
      "user_id": {
        "datatype": "bigInteger",
        "foreign_key" : {
